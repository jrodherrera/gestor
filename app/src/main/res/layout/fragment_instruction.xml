<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.instructions.InstructionFragment">

    <!-- Definicion de guias para adaptar elementos -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/instruction_oper_V_guide10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/instruction_oper_V_guide90"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/instruction_oper_H_guide10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/instruction_oper_H_guide90"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"/>
    <!--Pie -->
    <ImageView
        android:id="@+id/instruction_oper_IV_cars"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/cars"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <!--Boton continuar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/instruction_oper_BTN_next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/go"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toTopOf="@id/instruction_oper_H_guide90"
        app:layout_constraintStart_toEndOf="@id/instruction_oper_V_guide10"
        app:layout_constraintEnd_toStartOf="@id/instruction_oper_V_guide90"/>
    <!--Texto -->
    <TextView
        android:id="@+id/instruction_oper_TV_about"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="@string/lorem"
        android:textColor="@color/color_primary_variant"
        app:layout_constraintBottom_toTopOf="@+id/instruction_oper_BTN_next"
        app:layout_constraintStart_toEndOf="@+id/instruction_oper_V_guide10"
        app:layout_constraintEnd_toStartOf="@+id/instruction_oper_V_guide90"/>
    <!--titulo -->
    <TextView
        android:id="@+id/instruction_oper_TV_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_howto_start"
        android:textColor="@color/color_primary_variant"
        android:layout_marginBottom="30dp"
        android:textSize="24dp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/instruction_oper_TV_about"
        app:layout_constraintEnd_toStartOf="@+id/instruction_oper_V_guide90"
        app:layout_constraintStart_toEndOf="@+id/instruction_oper_V_guide10"
        app:layout_constraintTop_toBottomOf="@+id/first_screen_IV" />
    <!--logo -->
    <ImageView
        android:id="@+id/instruction_oper_IV_appicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logobigtransparent"
        app:layout_constraintEnd_toStartOf="@+id/instruction_oper_V_guide90"
        app:layout_constraintStart_toStartOf="@+id/instruction_oper_V_guide10"
        app:layout_constraintTop_toTopOf="@+id/instruction_oper_H_guide10" />


</androidx.constraintlayout.widget.ConstraintLayout>